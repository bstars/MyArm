<?xml version="1.0"?>
<robot name="my_arm">

    
    <!-- Materials -->
    <material name="blue"> <color rgba="0 0 0.7 0.9"/> </material>
    <material name="red"> <color rgba="0.7 0 0 0.9"/> </material>
    <material name="black"> <color rgba="0.7 0.7 0.7 0.9"/> </material>


    <!-- ********************** Links ********************** -->
    <link name="base_link">
        <visual>
            <origin xyz="0.0 0.0 0.0135"/>
            <geometry>
                <box size="0.087 0.09 0.027"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <link name="link_servo_holder_0">
        <visual>
            <origin xyz="-0.00 -0.02 0.052"/> <!-- -->
            <geometry>
                <box size="0.02 0.057 0.05"/>
            </geometry>
        </visual>
    </link>

    <link name="link_servo_holder_1">
        <visual>
            <origin xyz="-0.00 -0.02 0.08"/> <!-- 0.052 + 0.0125 + -->
            <geometry>
                <box size="0.04 0.057 0.025"/>
            </geometry>
        </visual>
    </link>

    <!-- Joints -->
    <joint name="joint_base_2_servo_0" type="fixed">
        <parent link="base_link"/>
        <child link="link_servo_holder_0"/>
    </joint>

    <joint name="servo0" type="continuous">
        <origin xyz="0.0 -0.01 0.0645" rpy="0.0 0.0 0.0"/>
        <parent link="link_servo_holder_0"/>
        <child link="link_servo_holder_1"/>
        <axis xyz="0.0 0.0 1.0"/>
        <!-- <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/> -->
    </joint>
    


</robot>
